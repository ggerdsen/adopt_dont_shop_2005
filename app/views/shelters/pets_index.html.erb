<h2> <%= "#{@shelter.name}'s Available Pets" %> </h2>

<% @pets.each do |pet| %>
  <% if pet.shelter_id == @shelter.id %>
    <%= image_tag(pet.image, alt: "pet picture", method: :get, class: 'pet-image') %>
    <p> Name: <%= pet.name %> </p>
    <br>
    <p> Name: <%= pet.description %> </p>
    <br>
    <p> Aproximate Age: <%= pet.approximate_age %> </p>
    <br>
    <p> Sex: <%= pet.sex %> </p>
    <br>
  <% end %>
<% end %>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>

